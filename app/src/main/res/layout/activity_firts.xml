<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".ui.firtsactivity.FirtsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:tabIndicatorColor="@color/com_facebook_blue"
            app:tabSelectedTextColor="@color/textLogin"
            app:tabTextColor="@color/textLogin"
            android:layout_gravity="end">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/map_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:icon="@android:drawable/ic_dialog_map" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/list_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/workmates"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                />

        </com.google.android.material.tabs.TabLayout>
        <FrameLayout
            android:id="@+id/activity_firts_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>